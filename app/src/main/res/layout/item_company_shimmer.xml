<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/item_margin_vertical"
    >

    <ImageView
        android:id="@+id/companyImage"
        android:layout_width="@dimen/company_image_list_size"
        android:layout_height="@dimen/company_image_list_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="centerCrop"
        android:background="@color/shimmer_background"
        />

    <TextView
        android:id="@+id/companyName"
        android:layout_width="250dp"
        android:layout_height="28dp"
        app:layout_constraintStart_toEndOf="@id/companyImage"
        app:layout_constraintTop_toTopOf="@id/companyImage"
        app:layout_constraintBottom_toBottomOf="@id/companyImage"
        style="@style/ItemCompanyName"
        android:background="@color/shimmer_background"
        />

</androidx.constraintlayout.widget.ConstraintLayout>